<resources>
    
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTabBackground">@color/violet</item>
        <item name="pstsTabTextColor">@color/white</item>
        <item name="pstsIndicatorHeight">3dp</item>
        <item name="pstsIndicatorColor">@color/pink</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">        
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet_status_bar</item>   
    	<item name="android:navigationBarColor">@color/violet</item>  
    	<item name="colorControlActivated">@color/pink</item>
    </style>
   
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    	<item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
  		<item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
	</style>
    
</resources>